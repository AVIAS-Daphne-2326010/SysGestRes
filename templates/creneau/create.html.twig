{# templates/admin/creneau/create.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un créneau{% endblock %}

{% block body %}
    <h1>Créer un créneau</h1>

    {{ form_start(form) }}
        {{ form_row(form.date_debut) }}
        {{ form_row(form.date_fin) }}
        {{ form_row(form.ressource) }}
        <button class="btn">Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('creneau_index') }}">Retour à la liste</a>
{% endblock %}
