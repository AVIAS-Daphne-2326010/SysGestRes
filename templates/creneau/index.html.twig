{# templates/admin/creneau/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créneaux disponibles{% endblock %}

{% block body %}
    <h1>Créneaux disponibles</h1>

    <ul>
        {% for creneau in creneaux %}
            <li>
                Du {{ creneau.dateDebut|date('d/m/Y H:i') }} au {{ creneau.dateFin|date('d/m/Y H:i') }} — {{ creneau.ressource.name }}
                {% if isAdmin %}
                    <a href="{{ path('creneau_edit', {'id': creneau.id}) }}">Modifier</a>
                    <a href="{{ path('creneau_delete', {'id': creneau.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce créneau ?');">Supprimer</a>
                {% endif %}
            </li>
        {% else %}
            <li>Aucun créneau pour le moment.</li>
        {% endfor %}
    </ul>

    {% if isAdmin %}
        <a href="{{ path('creneau_create') }}">Créer un nouveau créneau</a>
    {% endif %}
{% endblock %}
