{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes Réservations</h1>
    <p>Consultez ici vos réservations en cours ou passées.</p>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% if bookings is empty %}
        <p>Aucune réservation trouvée.</p>
    {% else %}
        <div class="d-flex flex-column gap-3">
            {% for booking in bookings %}
                <div class="card shadow-sm border {% if booking.status == 'cancelled' %}border-secondary{% else %}border-primary{% endif %}">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <!-- Partie gauche : infos -->
                        <div>
                            <p class="mb-1"><strong>Date & Heure :</strong><br>
                                {{ booking.timeslot.startDatetime|date('d/m/Y H:i') }} → {{ booking.timeslot.endDatetime|date('d/m/Y H:i') }}
                            </p>
                            <p class="mb-1"><strong>Nom de la ressource :</strong><br>{{ booking.timeslot.resource.name }}</p>
                            <p class="mb-1"><strong>Organisation :</strong><br>{{ booking.timeslot.resource.client.organizationName }}</p>
                            <p class="mb-1"><strong>Adresse :</strong><br>{{ booking.timeslot.resource.location }}</p>
                            <p class="mb-0">
                                <strong>Statut :</strong>
                                {% if booking.status == 'cancelled' %}
                                    <span class="badge bg-secondary">Annulée</span>
                                {% else %}
                                    <span class="badge bg-info text-dark">Confirmée</span>
                                {% endif %}
                            </p>
                        </div>
                        <!-- Partie droite : bouton -->
                        <div>
                            {% if booking.status != 'cancelled' %}
                                <form method="post" action="{{ path('user_booking_cancel', {id: booking.id}) }}" onsubmit="return confirm('Annuler cette réservation ?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Annuler</button>
                                </form>
                            {% else %}
                                <span class="text-muted small">Déjà annulée</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
