{# templates/user/resource/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Type de Ressources{% endblock %}

{% block stylesheets %}
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 2.5rem;
            justify-content: center;
            align-items: flex-start; 
            padding: 3rem 0;
            margin-bottom: 20rem;
        }

        .resource-card {
            background-color:#99ceff;
            color: white;
            font-weight: bold;
            font-size: large;
            border-radius: 15px;
            padding: 1rem;
            width: 180px;
            height: 120px;
            text-align: center;
            box-shadow: 10px 10px #d4ecff;
            transition: transform 0.3s;
            display: flex;               
            justify-content: center;   
            align-items: center; 
            text-decoration: none;
        }

        .resource-card:hover {
            transform: translateY(-5px);
        }

        h1 {
            margin-top: 5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Les types de ressources</h1>
        <p>Voici les types de ressources disponibles :</p>

        {% if types is empty %}
            <p>Aucun type de ressource disponible.</p>
        {% else %}
            <div class="card-container">
                {% for type in types %}
                    <a href="{{ path('user_resources_by_type', {type: type}) }}" class="resource-card text-capitalize">
                        {{ type }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
