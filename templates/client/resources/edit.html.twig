{% extends 'base.html.twig' %}

{% block title %}Modifier la ressource{% endblock %}

{% block body %}
    <h1>Modifier la ressource</h1>

    {{ form_start(form, { 'action': path('client_resource_edit', { id: resource.id }) }) }}
        {{ form_row(form.name) }}

        {{ form_row(form.type) }}
        <datalist id="resource_type_options">
            {% for type in types %}
                <option value="{{ type }}"></option>
            {% endfor %}
        </datalist>

        {{ form_row(form.location) }}
        {{ form_row(form.capacity) }}
        {{ form_row(form.description) }}

        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="submit" class="btn btn-custom-primary">Enregistrer</button>
            <button type="button" class="btn btn-custom-primary" style="color: black; background-color: white; border: 1.5px solid;" data-bs-dismiss="modal">Annuler</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('client_resources') }}" class="btn btn-secondary mt-3">Retour Ã  la liste des ressources</a>
{% endblock %}
