{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du log</h1>
    <p><strong>ID :</strong> {{ log.id }}</p>
    <p><strong>Status :</strong> {{ log.status }}</p>
    <p><strong>Date de modification :</strong> {{ log.changedAt|date('d/m/Y H:i') }}</p>
    <p><strong>Modifié par :</strong> {{ log.changedBy }}</p>
    <p><strong>Commentaire :</strong> {{ log.comment }}</p>

    <a href="{{ path('admin_logs') }}">Retour à la liste des logs</a>
{% endblock %}
