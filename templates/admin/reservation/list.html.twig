{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
    <h1>Liste des réservations</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Date de réservation</th>
                <th>Utilisateur</th>
                <th>Créneau</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.date_reservation|date('Y-m-d H:i') }}</td>
                    <td>{{ reservation.utilisateur.nom }}</td>
                    <td>{{ reservation.creneau.date_debut|date('Y-m-d H:i') }} - {{ reservation.creneau.date_fin|date('Y-m-d H:i') }}</td>
                    
                    <td>
                        <a href="{{ path('annuler_reservation', {'id': reservation.id}) }}">Annuler</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
