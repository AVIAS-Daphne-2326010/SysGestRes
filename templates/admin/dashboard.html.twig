{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block stylesheets %}
    <style>
        .dashboard-container {
            max-width: 800px;
            padding: 60px 20px;
            margin: 8vw auto;
        }

        h1 {
            font-size: 3.5rem;
            margin-bottom: 2rem;
        }

        h2 {
            font-size: 1.8rem;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        p {
            font-size: 1.1rem;
            color: #333;
            font-style: italic;
            margin-bottom: 1rem;
        }

        .dashboard-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .dashboard-table th,
        .dashboard-table td {
            border: 1px solid #ccc;
            padding: 0.75rem;
            text-align: left;
        }

        .dashboard-table th {
            background-color: #d4ecff;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <h1>Bonjour administrateur, {{ prenom }} !</h1>

    <h2>Statistiques</h2>

    <table class="dashboard-table">
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Utilisateurs inscrits</td>
                <td>{{ stats.users }}</td>
            </tr>
            <tr>
                <td>Clients avec organisation</td>
                <td>{{ stats.clients }}</td>
            </tr>
            <tr>
                <td>Ressources créées</td>
                <td>{{ stats.resources }}</td>
            </tr>
            <tr>
                <td>Réservations totales</td>
                <td>{{ stats.bookings }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
