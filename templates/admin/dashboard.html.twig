{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <h1>Bonjour administrateur, {{ prenom }}</h1>

    <h2>Statistiques</h2>

    <div style="max-width: 600px; margin: 0 auto;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Catégorie</th>
                    <th>Valeur</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Utilisateurs inscrits</td>
                    <td>{{ stats.users }}</td>
                </tr>
                <tr>
                    <td>Clients avec organisation</td>
                    <td>{{ stats.clients }}</td>
                </tr>
                <tr>
                    <td>Ressources créées</td>
                    <td>{{ stats.resources }}</td>
                </tr>
                <tr>
                    <td>Réservations totales</td>
                    <td>{{ stats.bookings }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
