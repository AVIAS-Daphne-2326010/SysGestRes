{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestion des utilisateurs</h1>

    <a href="{{ path('admin_user_new') }}" class="btn btn-primary mb-3">
        + Ajouter un utilisateur
    </a>

    {% if users is empty %}
        <p>Aucun utilisateur n’a encore été créé.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Téléphone</th>
                    <th>Organisation</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.client ? user.client.organizationName : '—' }}</td>
                        <td>{{ user.role.name }}</td>
                        <td>
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
                            <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="POST" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
