{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de la réservation</h1>
    <p><strong>ID :</strong> {{ booking.id }}</p>
    <p><strong>Commentaire :</strong> {{ booking.comment }}</p>
    <p><strong>Date de création :</strong> {{ booking.createdAt|date('d/m/Y H:i') }}</p>
    <p><strong>Statut :</strong> {{ booking.status }}</p>

    <a href="{{ path('admin_bookings') }}">Retour à la liste des réservations</a>
{% endblock %}
