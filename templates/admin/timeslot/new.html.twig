{% extends 'base.html.twig' %}

{% block title %}Nouveau créneau - {{ resource.name }}{% endblock %}

{% block body %}
<h1>Ajouter un créneau pour {{ resource.name }}</h1>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-success">Enregistrer</button>
    <a href="{{ path('admin_timeslot_index', { id: resource.id }) }}" class="btn btn-secondary">Annuler</a>
{{ form_end(form) }}
{% endblock %}
