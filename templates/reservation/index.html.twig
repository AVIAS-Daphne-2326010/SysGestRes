{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Liste des réservations</h1>

        <div id="flash-messages"></div>

        <div class="table-responsive">
            <table class="table table-striped">
                <!-- ... en-têtes du tableau ... -->
                <tbody id="reservations-list">
                    {% include 'reservation/_list.html.twig' %}
                </tbody>
            </table>
        </div>

        <button id="new-reservation-btn" class="btn btn-primary">
            <i class="fas fa-plus"></i> Créer une nouvelle réservation
        </button>

        <!-- Modal -->
        <div class="modal fade" id="modal-container" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Réserver un créneau</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modal-form-container">
                        <!-- Le formulaire sera chargé ici -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion du bouton "Nouvelle réservation"
            const newReservationBtn = document.getElementById('new-reservation-btn');
            if (newReservationBtn) {
                newReservationBtn.addEventListener('click', function() {
                    fetch('{{ path('create_reservation') }}', {
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('modal-form-container').innerHTML = data.html;
                        new bootstrap.Modal(document.getElementById('modal-container')).show();
                    });
                });
            }

            // Délégation d'événement pour les boutons d'annulation
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('cancel-reservation') || 
                    e.target.closest('.cancel-reservation')) {
                    const button = e.target.classList.contains('cancel-reservation') 
                        ? e.target 
                        : e.target.closest('.cancel-reservation');
                    const reservationId = button.dataset.id;

                    Swal.fire({
                        title: 'Êtes-vous sûr?',
                        text: "Vous ne pourrez pas annuler cette action!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Oui, annuler!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch(`/reservation/${reservationId}/annuler`, {
                                method: 'POST',
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest',
                                    'Content-Type': 'application/json'
                                }
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    document.querySelector(`tr[data-reservation-id="${reservationId}"]`).remove();
                                    
                                    // Utilisez la réponse du serveur pour gérer l'affichage du message vide
                                    if (data.isEmpty) {
                                        const tbody = document.getElementById('reservations-list');
                                        tbody.innerHTML = `
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">
                                                    <i class="fas fa-calendar-times fa-2x mb-2"></i><br>
                                                    Aucune réservation trouvée
                                                </td>
                                            </tr>
                                        `;
                                    }
                                    
                                    showFlashMessage('success', data.message);
                                }
                            });
                        }
                    });
                }
            });

            // Gestion de la soumission du formulaire
            document.addEventListener('submit', function(e) {
                if (e.target.classList.contains('ajax-form')) {
                    e.preventDefault();
                    const form = e.target;
                    
                    fetch(form.action, {
                        method: form.method,
                        body: new FormData(form),
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const modal = bootstrap.Modal.getInstance(document.getElementById('modal-container'));
                            if (modal) modal.hide();
                            
                            const tbody = document.getElementById('reservations-list');
                            tbody.insertAdjacentHTML('afterbegin', data.reservationRow);
                            checkEmptyList();
                            showFlashMessage('success', data.message);
                        } else {
                            showFlashMessage('error', data.message);
                        }
                    });
                }
            });

            function checkEmptyList() {
                const tbody = document.getElementById('reservations-list');
                const reservations = tbody.querySelectorAll('tr[data-reservation-id]');
                const emptyRow = tbody.querySelector('.text-center.text-muted'); // Sélecteur plus précis
                
                if (reservations.length === 0) {
                    // Vérifie si le message vide n'existe pas déjà
                    if (!emptyRow) {
                        tbody.innerHTML = `
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="fas fa-calendar-times fa-2x mb-2"></i><br>
                                    Aucune réservation trouvée
                                </td>
                            </tr>
                        `;
                    }
                } else {
                    // Supprime le message vide s'il existe et qu'il y a des réservations
                    if (emptyRow) {
                        emptyRow.remove();
                    }
                }
            }

            function showFlashMessage(type, message) {
                const flashDiv = document.createElement('div');
                flashDiv.className = `alert alert-${type} alert-dismissible fade show`;
                flashDiv.role = 'alert';
                flashDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                
                const flashContainer = document.getElementById('flash-messages');
                flashContainer.appendChild(flashDiv);
                
                setTimeout(() => flashDiv.remove(), 5000);
            }
        });
    </script>
{% endblock %}

{% block head %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/votre-code.js" crossorigin="anonymous"></script>
{% endblock %}