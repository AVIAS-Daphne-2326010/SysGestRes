{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <style>
        .homepage h1 {
            font-size: 3rem;
            font-weight: 350;
            text-align: left;
            margin: 5rem auto;
            color: black;
            letter-spacing: 3px;
        }

        .homepage section {
            margin: 0rem auto;
            max-width: 1000px;
            padding: 0 0 3rem 0;
            box-shadow: 0 0 5px rgba(0,0,0,0.05);
        }

        .homepage h2 {
            font-size: 2rem;
            color: black;
            margin-bottom: 2rem;
            text-align: center;
            letter-spacing: 2px;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 2.5rem;
            justify-content: center;
            align-items: flex-start; 
            padding: 3rem 0;
        }

        .resource-card {
            background-color:#99ceff;
            color: white;
            font-weight: bold;
            font-size: large;
            border-radius: 15px;
            padding: 1rem;
            width: 180px;
            height: 120px;
            text-align: center;
            box-shadow: 10px 10px #d4ecff;
            transition: transform 0.3s;
            display: flex;               
            justify-content: center;   
            align-items: center; 
            text-decoration: none;
        }

        .resource-card:hover {
            transform: translateY(-5px);
        }

        .homepage .steps {
            text-align: center;
            font-weight: 500;
            line-height: 1.8;
        }

        .homepage p {
            text-align: center;
            margin-top: 2rem;
            font-size: 1.1rem;
        }

        #features {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        #features p {
            position: relative;
            text-align: left;
            margin: 0.5rem 0;
            flex: 1;
            font-size: 1.5rem;  
            line-height: 1.6; 
            right: 200px;
            z-index: 1;
            right: 0;
            letter-spacing: 2px;
        }

        #features p::before {
            content: '';
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 105%;
            height: 1.5em; 
            background-color: #d4ecff; 
            z-index: -1;
            border-radius: 2px; 
        }

        #features img {
            max-width: 500px;
            position: relative;
            left: 200px;
        }

        @media (max-width: 1180px) {
            #features {
                flex-direction: row;
                justify-content: space-around;
            }

            #features img {
                max-width: 350px;
                left: 10px;
            }
        }

        .hero {
            background: #d4ecff;
            padding: 6rem 6rem 3rem 6rem;
            text-align: center;
            margin-bottom: 3rem;
        }

        .hero-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
            padding: 2rem 2rem 4rem 2rem;
        }

        .hero-buttons a {
            text-decoration: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            transition: background 0.3s ease;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
        }

        .btn-black:hover {
            background-color: #333;
        }

        .btn-white {
            background-color: #fff;
            color: #000;
        }

        .btn-white:hover {
            background-color: #f0f0f0;
        }

        .separator-with-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            margin: 3rem 0;
        }

        .separator-with-logo .line {
            flex: 1;
            height: 1.5px;
            max-width: 180px;
            background-color: black;
        }

        .separator-with-logo .logo {
            height: 50px;
            width: auto;
        }

        .steps {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 3rem;
        }

        .step-card {
            background-color: #d4ecff;
            padding: 2rem;
            border-radius: 12px;
            text-align: center;
            width: 300px;
            height: 180px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }

        .step-card:hover {
            transform: translateY(-5px);
        }

        .step-number {
            display: inline-block;
            background-color: white;
            color: #99ceff;
            font-weight: bold;
            font-size: 1.5rem;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
        }

        .step-card p {
            font-weight: normal;
            letter-spacing: 1px;
        }

        .center-button {
            text-align: center;
            margin-top: 1rem;
        }
    </style>

    <div class="homepage">
        <div class="hero">
            <h1>Réservez facilement, gérez efficacement – <br> votre espace, vos horaires, votre tranquillité...</h1>
            <div class="hero-buttons">
                <a href="#how-it-works" class="btn-black">Comment ça marche ?</a>
                <a href="#resources" class="btn-white">Réserver maintenant</a>
            </div>
        </div>

        <!-- Séparateur visuel -->
        <div style="text-align: center; margin: 3rem 0 0 0;">
            <img src="{{ asset('images/separator.png') }}" alt="Séparateur" style="max-width: 200px;">
        </div>

        <section id="resources">
            <h2>Nos ressources</h2>
            <div class="card-container">
                {% for type in resourceTypes %}
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_resources', { type: type.type }) }}" class="resource-card">
                                {{ type.type }}
                            </a>
                        {% elseif is_granted('ROLE_CLIENT') %}
                            <a href="{{ path('client_resources', { type: type.type }) }}" class="resource-card">
                                {{ type.type }}
                            </a>
                        {% else %}
                            <a href="{{ path('user_resources_by_type', { type: type.type }) }}" class="resource-card">
                                {{ type.type }}
                            </a>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="resource-card">
                            {{ type.type }}
                        </a>
                    {% endif %}
                {% else %}
                    <p>Aucune ressource disponible</p>
                {% endfor %}
            </div>
        </section>

        <section id="features">
            <div>
                <h2>Nos fonctionnalités</h2>
                <p>Des créneaux personnalisables</p>
                <p>Sécurité et Confidentialité</p>
                <p>Des réservations en temps réel</p>
                <p>Un accès administrateur et client dédiés</p>
            </div>
            <img src="{{ asset('images/features-decor.png') }}" alt="Image décorative fonctionnalités">
        </section>

        <div class="separator-with-logo">
            <span class="line"></span>
            <img src="{{ asset('images/logo2.png') }}" alt="Logo" class="logo">
            <span class="line"></span>
        </div>

        <section id="how-it-works">
            <h2>Comment ça marche ?</h2>
            <div class="steps">
                <div class="step-card">
                    <span class="step-number">1</span>
                    <p>Créer un compte</p>
                </div>
                <div class="step-card">
                    <span class="step-number">2</span>
                    <p>Configurer vos ressources et vos horaires</p>
                </div>
                <div class="step-card">
                    <span class="step-number">3</span>
                    <p>Vos clients réservent en toute simplicité</p>
                </div>
            </div>
        </section>

        <p>Inscrivez-vous gratuitement et testez notre outil de réservation en ligne !</p>
        <div class="hero-buttons">
            {% if app.user %}
                <a href="{{ path('homepage') }}" class="btn-black">Commencez maintenant</a>
            {% else %}
                <a href="{{ path('app_register') }}" class="btn-black">Commencez maintenant</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
