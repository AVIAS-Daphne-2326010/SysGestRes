{# templates/partials/_footer.html.twig #}

<style>
    footer {
        background-color: #d4ecff;
        color: black;
        padding: 3rem 1rem;
        margin-top: 3rem;
        font-family: Arial, sans-serif;
    }

    .footer-container {
        max-width: 1200px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 2rem;
    }

    .footer-section {
        flex: 1 1 200px;
    }

    .footer-section h4 {
        margin-bottom: 1rem;
        font-size: 1.2rem;
        color: black;
        border-bottom: 2px solid black;
        padding-bottom: 0.5rem;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section ul li {
        margin: 0.5rem 0;
    }

    .footer-section ul li a {
        color: black;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-section ul li a:hover {
        color: black;
        text-decoration: underline;
    }

    .footer-section p {
        font-size: 0.95rem;
        line-height: 1.6;
        color: black;
    }

    .social-icons {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .social-icons a {
        color: black;
        font-size: 1.5rem;
        transition: color 0.3s ease;
    }

    .social-icons a:hover {
        color:rgb(255, 255, 255);
    }

    .footer-bottom {
        text-align: center;
        margin-top: 3rem;
        font-size: 0.9rem;
        color: #555;
    }

    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .footer-section {
            flex: 1 1 100%;
        }
    }
</style>

<footer>
    <div class="footer-container">
        <div class="footer-section">
            <h4>TYPES DE RESSOURCES</h4>
            {% set types = resource_types() %}
            <ul>
                {% for type in types %}
                    <li><a href="#">{{ type.type }}</a></li>
                {% else %}
                    <li>Aucune ressource</li>
                {% endfor %}
            </ul>
        </div>

        <div class="footer-section">
            <h4>NAVIGATION</h4>
            <ul>
                <li><a href="#">FAQ</a></li>
                <li><a href="#">Conditions d’utilisation</a></li>
                <li><a href="#">Politique de confidentialité</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>

        <div class="footer-section">
            <h4>A PROPOS</h4>
            <p>Notre plateforme permet aux organisations de gérer facilement leurs ressources et aux utilisateurs de réserver en toute confiance.</p>
        </div>

        <div class="footer-section">
            <h4>SUIVEZ-NOUS</h4>
            <div class="social-icons">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        &copy; {{ "now"|date("Y") }} - Tous droits réservés
    </div>
</footer>
